{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "baseUrl": "./packages",
        "allowJs": true,
        "paths": {
            "@almight-sdk/core/*": ["core/src/*"],
            "@lamight-sdk/auth/*": ["auth/src/*"],
            "@lamight-sdk/platform-node/*": ["paltform-node/src/*"],
            "@almight-sdk/connector/*": ["connector/src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}